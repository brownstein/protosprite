{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2019", "dom"],
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "types": ["jest", "node"],
    "outDir": "dist",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "proto_dist/*": [
        "./proto_dist/*"
      ]
    }
  },
  "include": ["src/**/*", "proto_dist/**/*"],
  "exclude": ["node_modules", "dist"]
}