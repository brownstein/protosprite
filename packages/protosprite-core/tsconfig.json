{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": ["esnext"],
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist",
    "removeComments": false,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "proto_dist/*": ["./proto_dist/*"]
    },
    "plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
  },
  "include": ["src", "proto_dist"],
  "exclude": ["node_modules", "dist"]
}
