{
  "name": "protosprite-core",
  "type": "module",
  "version": "0.0.1",
  "description": "A compact, protobuf based sprite exchange format",
  "main": "index.js",
  "keywords": [
    "protobuf",
    "sprites",
    "sprite-sheets"
  ],
  "author": "Robert Brownstein",
  "license": "MIT",
  "scripts": {
    "build:clean": "rm -rf ./proto_dist ./dist",
    "build:buf": "buf generate",
    "build:rollup": "rollup -c",
    "build": "npm run build:clean && npm run build:buf && npm run build:rollup",
    "postinstall": "npm run build"
  },
  "bin": {
    "encode": "./bin/encode.js"
  },
  "devDependencies": {
    "@bufbuild/buf": "^1.56.0",
    "@bufbuild/protobuf": "^2.7.0",
    "@bufbuild/protoc-gen-es": "^2.7.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "jest": "^29.7.0",
    "rollup": "^4.48.1",
    "typescript": "^5.9.2"
  },
  "directories": {
    "src": "src",
    "dist": "dist",
    "proto_dist": "proto_dist"
  },
  "files": [
    "src",
    "dist",
    "proto_dist"
  ],
  "dependencies": {
    "js-base64": "^3.7.8"
  }
}
