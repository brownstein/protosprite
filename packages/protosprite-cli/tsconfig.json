{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "target": "esnext",
    "lib": ["ES2024"],
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": false,
    "types": ["jest", "node"],
    "outDir": "dist",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}